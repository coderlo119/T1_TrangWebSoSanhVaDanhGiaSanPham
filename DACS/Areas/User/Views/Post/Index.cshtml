@model IEnumerable<DACS.Models.EF.Post>


<section class="py-2">
    <div class="small-container">
        <h2 class="title">
            Bài Viết
        </h2>
        <h3 class="nav-item">
            <div class="card">
                <div class="card-header">

                    <div class="card-tools">
                        <button class="btn btn-primary"> <a href="/user/post/Add" class="btn btn-primary">Thêm mới</a></button>
                    </div>
                </div>
        </h3>
    </div>
    <div class="container px-4 px-lg-5 mt-5">
        <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">
            @foreach (var post in Model)
            {
                @if (post.IsActive == true)
                {
                    <div class="col mb-5">
                        <div class="card gap-3" style="width: 18rem">
                        <img src="@post.ImageUrl" class="card-img-top" alt="..."
                             style="height: 300px">
                        <div class="card-body">
                            <h3 class="card-title">
                                @Html.DisplayFor(modelItem => post.Title)
                            </h3>
                            <h5 class="card-title">
                                @Html.DisplayFor(modelItem => post.Description)
                            </h5>

                        </div>
                    </div>
                </div>
                }
            }
        </div>
    </div>
</section>
