@model X.PagedList.IPagedList<DACS.Models.EF.News>
@using X.PagedList.Mvc.Core;
@using X.PagedList;
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/User/Views/Shared/_Layout.cshtml";
}

<style>
    .news_section_container{
        margin-top:180px;

    }

    .row-item-new{
        margin-bottom:20px;
    }
    .title-news{
        font-size:24px;
        border-bottom: 1px solid;
        padding: 15px 0;
        margin-bottom:25px;
    }

    .img-box img{
        max-width:100%;
        max-height:100%;
    }

</style>

<div class="container news_section_container">
    <div class="row">
        <div class="col-md-12">
            <h1 class="title-news">Tin tức</h1>
        </div>
    </div>
    @foreach (var news in Model)
    {
        @if (news.IsActive == true)
        {
            <div class="row row-item-new">
                <div class="col-md-3">
                    <div class="img-box">
                        <a asp-action="Display" asp-route-id="@news.Id" title="@news.Title"><img src="@news.ImageUrl" alt="@news.Title"></img></a>
                    </div>
                </div>
                <div class="col-md-9">
                    <div class="content-box">
                        <h3><a asp-action="Display" asp-route-id="@news.Id" title="@news.Title">@news.Title</a></h3>
                        <div class="description-box">
                            @news.Description
                        </div>
                    </div>
                </div>
            </div>
        }
    }
     <div class="row">
        <div class="col-6">
            Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) /@Model.PageCount
        </div>
        <div class="col-6">
            @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
        </div>
     </div>
</div>









