@model DACS.Models.EF.CheckingCart




<div class="main_content">
    <h2 class="title">
        Products Display
    </h2>
    <div class="products_iso">
        <div class="row">
            <div class="col">
                <div class="product-grid">
                    <div class="container px-4 px-lg-5 mt-5">
                        <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">
                            @foreach (var item in Model.Items)
                            {
                                <div class="col-4">



                                    <div class="card">
                                        <img src="@item.ImageUrl" alt="Product Image" style="max-width: 200px;" />
                                        <h2>@item.Name</h2>
                                        <h3>@Html.Raw(item.Detail)</h3>
                                        <h3>@Html.Raw(item.AddressAndPrice)</h3>
                                        <a asp-controller="Home" asp-action="Display" asp-route-id="@item.ProductId">Details</a>
                                        <a asp-action="RemoveFromCart" asp-route-productId="@item.ProductId">Remove</a>


                                    </div>

                                </div>

                            }

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
